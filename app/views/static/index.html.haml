    #wrap
      .container
        %a#logo{href: '/'}
          %img{src: 'static/images/logo.png'}/
        .big_images_wrap
          .row.search_row
            .col-xs-12.col-lg-6
              .big_img_container
                #big_img_1_wrap{'data-0': 'transform:translate(0%,0%);', 'data-100p': 'transform:translate(0%,-35%);', 'data-200p': 'transform:translate(0,-50%);', 'data-300p': 'transform:translate(0,-75%);'}
                  %img#big_img_1{src: 'static/images/big-img-1.png'}/
                %img.shadow{'data-0': 'transform:scale(1, 1);', 'data-100p': 'transform:scale(1.3, 1.3);', src: 'static/images/big-img-1-shadow.png'}/
            .col-xs-12.col-lg-6
              .title_text.light_fm Search right people with our magic extension
              %a.ext_button.italic_fm.ext_btn_bg.b-radius-3{href: 'https://chrome.google.com/webstore/detail/trendomio/dpidfkeonkknjbgfimepallbhlnhcoki', target: '_blank', rel: 'nofollow'}
                %img{src: 'static/images/chrome-ext-ico.png'}>/
                Add Extension to Chrome
          .row.choose_row
            .col-xs-12.col-lg-8
              .title_left_padding
                .title_text.light_fm
                  Choose one of really converting
                  %br>/
                  email templates
                %a.trans_button.italic_fm.b-radius-3{href: '/home'}
                  %img{src: 'static/images/google-white-ico.png'}>/
                  Log in with Google
            .col-xs-12.col-lg-4
              .big_img_container.right_float
                #big_img_2_wrap{'data-0': 'transform:translate(0%,0%);', 'data-200p': 'transform:translate(0%,-45%);', 'data-300p': 'transform:translate(0,-60%);', 'data-400p': 'transform:translate(0,-80%);'}
                  %img#big_img_2{src: 'static/images/big-img-2.png'}/
                %img.shadow{'data-0': 'transform:scale(1, 1);', 'data-200p': 'transform:scale(1.3, 1.3);', src: 'static/images/big-img-2-shadow.png'}/
          .row.send_row
            .col-xs-12.col-lg-6
              .big_img_container
                #big_img_3_wrap{'data-0': 'transform:translate(0%,0%);', 'data-300p': 'transform:translate(0%,-45%);', 'data-400p': 'transform:translate(0,-65%);', 'data-500p': 'transform:translate(0,-85%);'}
                  %img#big_img_3{src: 'static/images/big-img-3.png'}/
                %img.shadow{'data-0': 'transform:scale(1, 1);', 'data-300p': 'transform:scale(1.4, 1.4);', src: 'static/images/big-img-3-shadow.png'}/
            .col-xs-12.col-lg-6
              .title_text.light_fm Send all emails at once from your cabinet
          .row.get_row
            .col-xs-12.col-lg-offset-6.col-lg-6
              .single_label_text.light_fm
                %img{src: 'static/images/get-ico.png'}/
                %span Get responses
          .row.search_row
            .col-xs-12.col-md-12.col-lg-12
              .single_label_text.light_fm
                %center Simple! But it works.

        #should_section
          .title_text.light_fm
            %center Why would I need direct emails?
          .title_subtext.italic_fm
            %center You should email:
          .should_list_wrap
            .should_list.row
              .col-xs-12.col-md-4
                .item
                  %img{src: 'static/images/should-label-1.png'}/
                  .name.bold_fm New Customers
                  %ul.list.italic_fm
                    %li Grow your revenue
                    %li Reach new customers
                    %li Find decision makers
                    %li Identify the best point of contact
              .col-xs-12.col-md-4
                .item
                  %img{src: 'static/images/should-label-2.png'}/
                  .name.bold_fm Journalists & Bloggers
                  %ul.list.italic_fm
                    %li Request an article
                    %li Notify them about a project launch
                    %li Invite to an event
                    %li Press-releases
                    %li Improve your SEO positions
              .col-xs-12.col-md-4
                .item
                  %img{src: 'static/images/should-label-3.png'}/
                  .name.bold_fm Investors
                  %ul.list.italic_fm
                    %li Get funded
                    %li Ask for advice
                    %li Find a mentor
                    %li Find competitors
            .should_list.row
              .col-xs-12.col-md-offset-2.col-md-4
                .item
                  %img{src: 'static/images/should-label-4.png'}/
                  .name.bold_fm Your Future Teammates
                  %ul.list.italic_fm
                    %li Build your team
                    %li Hire someone
                    %li Connect your co-founder(s)
                    %li Get insights
              .col-xs-12.col-md-4
                .item
                  %img{src: 'static/images/should-label-5.png'}/
                  .name.bold_fm HR Departments
                  %ul.list.italic_fm
                    %li Get a Job
                    %li Contact hundreds of HRs
                    %li Inquire about best practicess
                    %li Get insights

        #video_section.row
          .title_text.light_fm
            %center 2 minutes video of how it works
          .title_subtext.italic_fm
            %center check this out:
          .col-xs-12.centeredContainer
            .embed-responsive.embed-responsive-16by9
              %iframe.embed-responsive-item#video{width: '100%', heigth: '100%', src: 'https://www.youtube.com/embed/OvTgv4XJWo8', frameborder: 0, allowfullscreen: true}

        #start_section.row
          .col-xs-12.centeredContainer
            .white_area_block
              %h1.title_text.dark_color.light_fm Email finder service
              .title_text.dark_color.light_fm Starting from 14Â¢ / verified contact
              .title_subtext.italic_fm.dark_color
                Start finding people with a
                %span.blue_color 80 free credit
              .title_subtext.italic_fm.dark_color
                or
              .title_subtext.italic_fm.dark_color
                %a#prices.blue_color{href: 'prices.html'}
                  compare our tariff plans
              .buttons.row
                .col-xs-12.col-lg-6.centeredContainer
                  %a.ext_button.italic_fm.ext_btn_bg.b-radius-3{href: 'https://chrome.google.com/webstore/detail/trendomio/dpidfkeonkknjbgfimepallbhlnhcoki', target: '_blank', rel: 'nofollow'}
                    %img{src: 'static/images/chrome-ext-ico.png'}>/
                    Add Extension to Chrome
                .col-xs-12.col-lg-6.centeredContainer
                  %a.trans_button.italic_fm.b-radius-3{href: '/home'}
                    %img{src: 'static/images/google-white-ico.png'}>/
                    Log in with Google
        #footer_section.row
          .col-xs-12.centeredContainer
            %a{href: '/'}
              %img{src: 'static/images/logo.png'}/
        .row
          .col-xs-12.centeredContainer
            %a.default_text#privacy{href: '/sources.html'}
              Our data sources and privacy policy
